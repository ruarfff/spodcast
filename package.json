    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "firebase": "^8.2.10",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "querystring": "^0.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
